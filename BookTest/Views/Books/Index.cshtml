                    </span>
                </span>
                <input type="text" data-kt-filter="search" class="form-control form-control-solid w-250px ps-14" placeholder="Search by  title or  author" />
            </div>



        </div>

    </div>
    <div class="card-body  pt-0">

        <div class="table-responsive">
            <table id="BooksTable" class="table table-row-dashed table-row-gray-300 gy-2 align-middle ">
                <thead>
                    <tr class="fw-semibold fs-6 text-gray-800 border-bottom border-gray-200">
                        <th class="d-none"></th>
                        <th>Book</th>
                        <th>Publisher</th>
                        <th>Publishing Date</th>
                        <th>Hall</th>
                        <th>Categories</th>
                        <th>Rental</th>
                        <th>Status</th>
                        <th class="text-end">Action</th>

                    </tr>
                </thead>

            </table>
        </div>


    </div>
</div>

<input type="hidden" name="__RequestVerificationToken" value="@antiforgery.GetAndStoreTokens(Context).RequestToken" />
@section Plugins
