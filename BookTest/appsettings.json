{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=BookTest;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"

    }
  },
  "Serilog": {
    "MinimumLevel": "Error",
    "Override": {
      "Microsoft": "Error"
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/bookify_.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp} {Message}{NewLine:1}{Exception:1}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/bookify_.json",
          "rollingInterval": "Day",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, serilog"
        }
      }
     
    ]
   
  },
  "AllowedHosts": "*",
  "CloudinarySetting": {
    "CloudName": "",
    "APIKey": "",
    "APISecret": ""

  },
  "MailSetting": {
    "Email": "",
    "DisplayName": "Bookify",
    "Password": "",
    "Host": "smtp.gmail.com",
    "Port": "587"
  }

}
